﻿@model IEnumerable<SachOnline.Models.SACH>
<h2 class="text-center">SÁCH BÁN NHIỀU</h2>
<div class="row">
    @foreach (SachOnline.Models.SACH item in Model)
    {
        <div class="col-lg-6 col-md-6">
            <div class="media-object-default">
                <div class="media">
                    <div class="media-left"> <a href="#"> <img class="media-object imgsachbannhieu" src="~/Images/Sach/@item.HinhMinhHoa" alt="placeholder image"> </a> </div>
                    <div class="media-body">
                        <h4 class="media-heading">@item.TenSach</h4>
                        @item.MoTa
                    </div>
                </div>
            </div>
        </div>
    }
</div>
