@Model SachOnline.Models.SACH

@{
    ViewBag.Title = "ChiTietSach";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>Chi Tiết Sách</h2>

<div class="thumbnail">
    <h4 class="tensach">@Model.TenSach</h4>
    <img src="~/Images/Sach/@Model.HinhMinhHoa" alt=" @Model.TenSach">
    <div class="motasach">
        <p>
            @Html.Raw(@Model.MoTa.ToString().Replace("\n", "<br>"))
        </p>
    </div>
    <p class="ngaycapnhat"> Ngày cập nhật: @Html.FormatValue(@Model.NgayCapNhat, "{0:dd/MM/yyyy}")</p>
    <p class="giaban">Giá bán: <span>@Html.FormatValue(@Model.DonGia, "{0:#,##0}") VNĐ</span></p>
    <p class="addtocard">
        <a href="@Url.Action("ThemGioHang","GioHang", new { ms = Model.MaSach, url = Request.Url.ToString()})" class="btn btn-primary" role="button">
            <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true">Add-to-Cart</span>
        </a>
    </p>
</div>

